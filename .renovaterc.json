{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "description": "Automerge upgrades to pyright",
      "matchDepNames": [
        "pyright"
      ],
      "automerge": true
    },
    {
      "description": "Automerge upgrades to GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    }
  ]
}
